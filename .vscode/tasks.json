{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++: Compile and Run",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": ["/c"]
                }
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
